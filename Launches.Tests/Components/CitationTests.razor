@inherits TestContext

@code {
  [Fact]
  public void Citation_ShouldRenderLink()
  {
    var cut = RenderComponent<Citation>();

    var link = cut.Find("a");

    Assert.Matches("spaceflightnow.com", link.Attributes["href"]!.Value);
    Assert.Matches("spaceflightnow.com", link.TextContent);
  }
}
