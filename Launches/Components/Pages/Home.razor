@page "/"
@inject ILaunchRepository launches

<PageTitle>Space Coast Launches</PageTitle>

<header>
  <div>Space Coast Launches</div>
  <Citation />
</header>
<main>
  <table>
    <thead>
      <tr>
        <th>Date</th>
        <th>Mission</th>
        <th>Site</th>
        <th>Window</th>
      </tr>
    </thead>
    <tbody>
      @foreach (var item in launches.Items)
      {
        <tr>
          <td>@item.Date</td>
          <td>@item.Mission</td>
          <td>@item.Site</td>
          <td>@item.Time</td>
        </tr>
        <tr>
          <td colspan="4">
            @item.Description
          </td>
        </tr>
      }
    </tbody>
  </table>
</main>
<footer>
  <div>Next data refresh T-Minus @(launches.GetNextUpdate().ToString(@"hh\:mm\:ss")).</div>
</footer>
